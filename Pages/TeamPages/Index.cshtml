@page
@model TeamPlayers.Pages.TeamPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Team) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TeamName">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TeamName">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TeamName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
